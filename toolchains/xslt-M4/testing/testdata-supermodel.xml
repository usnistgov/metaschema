<assembly xmlns="http://csrc.nist.gov/ns/oscal/metaschema/1.0/supermodel"
          name="anthology"
          gi="ANTHOLOGY"
          key="ANTHOLOGY"
          namespace="http://csrc.nist.gov/metaschema/ns/anthology">
   <assembly name="meta" gi="meta" key="meta">
      <group in-json="SINGLETON_OR_ARRAY" key="creators">
         <field name="creator" gi="creator">
            <flag in-json="string"
                  as-type="string"
                  name="role"
                  key="role"
                  gi="role">editor</flag>
            <value as-type="string" key="STRVALUE" in-json="string">Wendell Piez</value>
         </field>
      </group>
      <group in-json="SINGLETON_OR_ARRAY" key="keywords">
         <field name="keyword" gi="keyword" in-json="SCALAR">
            <value as-type="string" in-json="string">poetry</value>
         </field>
         <field name="keyword" gi="keyword" in-json="SCALAR">
            <value as-type="string" in-json="string">verse</value>
         </field>
      </group>
      <field name="remarks" gi="remarks" in-json="SCALAR" key="remarks">
         <value as-type="markup-multiline" in-json="string">
            <h1>Demo anthology</h1>
            <p>Compiled for purposes of testing and demonstrating validations against constraints
                defined by NIST Metaschema.</p>
         </value>
      </field>
   </assembly>
   <group in-json="SINGLETON_OR_ARRAY" key="pieces">
      <assembly name="piece" gi="piece">
         <assembly name="meta" gi="meta" key="meta">
            <group in-json="SINGLETON_OR_ARRAY" key="creators">
               <field name="creator" gi="creator">
                  <flag in-json="string"
                        as-type="string"
                        name="role"
                        key="role"
                        gi="role">author</flag>
                  <flag in-json="string"
                        as-type="string"
                        name="who"
                        key="who"
                        gi="who">#w.h.auden</flag>
                  <value as-type="string" key="STRVALUE" in-json="string">W.H. Auden</value>
               </field>
            </group>
            <field name="date" gi="date" key="date">
               <value as-type="string" key="STRVALUE" in-json="string">1954</value>
            </field>
         </assembly>
         <assembly name="verse" gi="verse" key="verse">
            <flag in-json="string"
                  as-type="string"
                  name="type"
                  key="type"
                  gi="type">quatrain</flag>
            <group in-json="SINGLETON_OR_ARRAY" key="lines">
               <field name="line" gi="line">
                  <flag in-json="number"
                        as-type="integer"
                        name="feet"
                        key="feet"
                        gi="feet">4</flag>
                  <flag in-json="string"
                        as-type="string"
                        name="base"
                        key="base"
                        gi="base">trochee</flag>
                  <value as-type="markup-line" key="RICHTEXT" in-json="string">Guard, Civility, with guns</value>
               </field>
               <field name="line" gi="line">
                  <flag in-json="number"
                        as-type="integer"
                        name="feet"
                        key="feet"
                        gi="feet">4</flag>
                  <flag in-json="string"
                        as-type="string"
                        name="base"
                        key="base"
                        gi="base">iamb</flag>
                  <value as-type="markup-line" key="RICHTEXT" in-json="string">Your modes and your declensions:</value>
               </field>
               <field name="line" gi="line">
                  <flag in-json="number"
                        as-type="integer"
                        name="feet"
                        key="feet"
                        gi="feet">4</flag>
                  <flag in-json="string"
                        as-type="string"
                        name="base"
                        key="base"
                        gi="base">trochee</flag>
                  <value as-type="markup-line" key="RICHTEXT" in-json="string">Any lout can spear with ease</value>
               </field>
               <field name="line" gi="line">
                  <flag in-json="number"
                        as-type="integer"
                        name="feet"
                        key="feet"
                        gi="feet">4</flag>
                  <flag in-json="string"
                        as-type="string"
                        name="base"
                        key="base"
                        gi="base">trochee</flag>
                  <value as-type="markup-line" key="RICHTEXT" in-json="string">Singular Archimedes.</value>
               </field>
            </group>
         </assembly>
      </assembly>
   </group>
   <assembly name="back" gi="back" key="back">
      <assembly name="author-index" gi="author-index" key="author-index">
         <group in-json="BY_KEY" key="authors">
            <assembly name="author" gi="author" json-key-flag="id">
               <flag in-json="string"
                     as-type="NCName"
                     name="id"
                     key="id"
                     gi="id">w.h.auden</flag>
               <field name="name" gi="name" in-json="SCALAR" key="name">
                  <value as-type="string" in-json="string">Wystan Hugh Auden</value>
               </field>
               <field name="dates" gi="dates" key="dates">
                  <flag in-json="string"
                        as-type="date"
                        name="birth"
                        key="birth"
                        gi="birth">1907-02-21</flag>
                  <flag in-json="string"
                        as-type="date"
                        name="death"
                        key="death"
                        gi="death">1973-09-29</flag>
                  <value as-type="empty" key="range" in-json="string"/>
               </field>
               <assembly name="bio" gi="bio" key="bio">
                  <group in-json="SINGLETON_OR_ARRAY" key="fact-statements">
                     <assembly name="facts" gi="facts">
                        <field name="dates" gi="dates" key="dates">
                           <flag in-json="string"
                                 as-type="date"
                                 name="birth"
                                 key="birth"
                                 gi="birth">1907-02-21</flag>
                           <flag in-json="string"
                                 as-type="date"
                                 name="death"
                                 key="death"
                                 gi="death">1973-09-29</flag>
                           <value as-type="empty" key="range" in-json="string"/>
                        </field>
                     </assembly>
                  </group>
               </assembly>
            </assembly>
         </group>
      </assembly>
   </assembly>
</assembly>
