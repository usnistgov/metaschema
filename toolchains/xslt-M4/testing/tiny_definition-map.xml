<model xmlns="http://csrc.nist.gov/ns/oscal/metaschema/1.0"
       root-at="TINY"
       namespace="http://csrc.nist.gov/metaschema/ns/tiny"
       prefix="t">
   <schema-name>NIST Tiny Testing Metaschema</schema-name>
   <schema-version>0.1</schema-version>
   <assembly scope="global" name="tiny" key="TINY" gi="TINY">
      <flag as-type="string"
            scope="global"
            name="id-flag"
            key="id-flag"
            gi="id-flag"/>
      <field scope="global"
             name="string-field"
             key="string-field"
             gi="string-field">
         <value as-type="string" key="STRVALUE"/>
      </field>
      <field scope="global"
             name="object-field"
             key="object-field"
             gi="object-field">
         <flag as-type="string"
               scope="global"
               name="id-flag"
               key="id-flag"
               gi="id-flag"/>
         <value as-type="boolean" key="boolean-value"/>
      </field>
      <group name="more-tiny" key="more-tiny" group-json="ARRAY">
         <assembly scope="global" recursive="true" name="tiny" gi="TINY"/>
      </group>
   </assembly>
</model>
