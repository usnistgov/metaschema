
  { "$schema" : "http://json-schema.org/draft-07/schema#",
    "$id" : "http://csrc.nist.gov/metaschema/anthology/1.0/anth-schema.json",
    "$comment" : "Anthology Metaschema: JSON Schema",
    "type" : "object",
    "definitions" : 
    { "anth-anth:anthology" : 
      { "title" : "Anthology",
        "description" : "A collection of literary excerpts",
        "$id" : "#assembly_anth_anthology",
        "type" : "object",
        "properties" : 
        { "id" : 
          { "title" : "Identifier",
            "description" : "A distinct code",
            "type" : "string",
            "pattern" : "^[_A-Za-z\u00C0-\u00D6\u00D8-\u00F6\u00F8-\u02FF\u0370-\u037D\u037F-\u1FFF\u200C-\u200D\u2070-\u218F\u2C00-\u2FEF\u3001-\uD7FF\uF900-\uFDCF\uFDF0-\uFFFD][_A-Za-z\u00C0-\u00D6\u00D8-\u00F6\u00F8-\u02FF\u0370-\u037D\u037F-\u1FFF\u200C-\u200D\u2070-\u218F\u2C00-\u2FEF\u3001-\uD7FF\uF900-\uFDCF\uFDF0-\uFFFD\\-\\.0-9\u00B7\u0300-\u036F\u203F-\u2040]*$" },
          "meta" : 
          { "$ref" : "#assembly_anth_meta" },
          "pieces" : 
          { "anyOf" : 
            [ 
              { "$ref" : "#assembly_anth_piece" },
              
              { "type" : "array",
                "minItems" : 1,
                "items" : 
                { "$ref" : "#assembly_anth_piece" } } ] },
          "back" : 
          { "$ref" : "#assembly_anth_back" } },
        "required" : 
        [ "meta" ],
        "additionalProperties" : false },
      "anth-anth:meta" : 
      { "title" : "Front matter / metadata",
        "description" : "Metadata for the anthology as a ^whole, or for a single piece within it",
        "$id" : "#assembly_anth_meta",
        "type" : "object",
        "properties" : 
        { "creators" : 
          { "anyOf" : 
            [ 
              { "$ref" : "#field_anth_creator" },
              
              { "type" : "array",
                "minItems" : 1,
                "items" : 
                { "$ref" : "#field_anth_creator" } } ] },
          "date" : 
          { "$ref" : "#field_anth_date" },
          "keywords" : 
          { "anyOf" : 
            [ 
              { "title" : "Key word",
                "description" : "A string",
                "type" : "string",
                "pattern" : "^\\S(.*\\S)?$" },
              
              { "type" : "array",
                "minItems" : 1,
                "items" : 
                { "title" : "Key word",
                  "description" : "A string",
                  "type" : "string",
                  "pattern" : "^\\S(.*\\S)?$" } } ] },
          "remarks" : 
          { "$ref" : "#field_anth_remarks" } },
        "additionalProperties" : false },
      "anth-anth:date" : 
      { "title" : "Date",
        "description" : "As represented",
        "$id" : "#field_anth_date",
        "type" : "object",
        "properties" : 
        { "type" : 
          { "title" : "Type of date representation",
            "description" : "May be given as a formatting code, e.g. 'YYYY' for year only. It is up to implementations to implement logic.",
            "type" : "string",
            "pattern" : "^\\S(.*\\S)?$" },
          "STRVALUE" : 
          { "type" : "string" } },
        "required" : 
        [ "STRVALUE" ],
        "additionalProperties" : false },
      "anth-anth:creator" : 
      { "title" : "Creator (author or editor)",
        "description" : "The text contents should name the person; the optional who flag links it to the index.",
        "$id" : "#field_anth_creator",
        "type" : "object",
        "properties" : 
        { "role" : 
