<map xmlns="http://csrc.nist.gov/ns/oscal/metaschema/1.0">
   <assembly key="number-sequences" gi="number-sequences">
      <group key="sequences">
         <assembly gi="sequence">
            <group key="items">
               <field as-type="string" gi="item">
                  <flag as-type="string" key="type" gi="type"/>
                  <flag as-type="string" key="id" gi="id"/>
                  <constraint scope="global">
                     <allowed-values target="." allow-other="no" id="global-item-allowed-values">
                        <enum value="A">a</enum>
                        <enum value="B">b</enum>
                        <enum value="C">c</enum>
                     </allowed-values>
                  </constraint>
               </field>
            </group>
            <group key="subsequences">
               <assembly gi="subsequence">
                  <group key="items">
                     <field as-type="string" gi="item">
                        <constraint>
                           <allowed-values target="." id="local-color-item-allowed-values">
                              <enum value="red">red</enum>
                              <enum value="blue">blue</enum>
                              <enum value="green">green</enum>
                           </allowed-values>
                        </constraint>
                     </field>
                  </group>
                  <group key="subsequences">
                     <assembly gi="subsequence"/>
                  </group>
               </assembly>
            </group>
            <constraint scope="global">
               <allowed-values target=".//item[@type='number']" allow-other="yes">
                  <enum value="1">one</enum>
                  <enum value="2">two</enum>
                  <enum value="3">three</enum>
               </allowed-values>
               <allowed-values target=".//item[@type='german']" extends="yes">
                  <enum value="Ä">a umlaut</enum>
                  <enum value="Ö">o umlaut</enum>
                  <enum value="Ü">u umlaut</enum>
               </allowed-values>
            </constraint>
         </assembly>
      </group>
   </assembly>
</map>
